<h1>New Post</h1>

<form action="<%= posts_url %>" method="post">
  <%= auth_token %>

  <label>Title:
      <input type="text" name="post[title]" value="">
  </label>
  <br>

  <label>URL:
    <input type="text" name="post[url]" value="">
  </label>
  <br>

  <label>Body:
    <input type="textarea" name="post[content]" value="">
  </label>
  <br>

  <label>Subs:</label>
  <br>


  <% Sub.all.each do |subs| %>
    <label>
      <input type="checkbox" name="sub_ids[]" value="<%= subs.id %>">
      <%= subs.title %>
    </label>
    <br>

  <% end %>


  <br>

  <input type="submit" name="" value="Create Post">
</form>
